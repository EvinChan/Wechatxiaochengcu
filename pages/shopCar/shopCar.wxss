.cartallview {
    padding-bottom: 166rpx;
    margin-top: 35rpx;
    
}

.storehed {
    display: flex;
    align-items: center;
    height: 80rpx;
    font-size: 30rpx;
    border-top: 1rpx solid #f5f5f5;
    border-bottom: 1rpx solid #f5f5f5;
    background: #fff;
}


/* 单页全局 */

icon {
    margin-left: 20rpx;
}

text {
    margin-left: 20rpx;
}

.shopgoodlist {
    display: flex;
    /* justify-content: flex-start; */
    font-size: 28rpx;
    /* height: 230rpx; */
    padding: 20rpx;
    border-top: 1rpx solid #f5f5f5;
    border-bottom: 1rpx solid #f5f5f5;
    position: relative;
    background-color: #fff;
    align-items: center;

}

.shopgoodlist image {
    margin: 0 20rpx;
    height: 95rpx;
    width: 95rpx;
}

/* .shopgoodlist .goodsdata text {
    display: block;
} */

.shopgoodlist .goodsdata .goodsname {
    height: 70rpx;
    font-size: 30rpx;
    margin-bottom: 10rpx;
}

/* .shopgoodlist .goodsdata .specification {
    font-size: 30rpx;
    color: #b2b2b2;
} */

.shopgoodlist .goodsdata .price {
    font-size: 24rpx;
    color: #f10000;
}
.shopgoodlist .goodsdata .priceAfter {
    font-size: 24rpx;
    color: #747474;
}

.shopgoodlist .goodsdata .goodsnum {
    width: 120rpx;
    height: 40rpx;
    position: absolute;
    right: 10%;
    top: 35%;
    display: flex;

}


.shopgoodlist .goodsdata .goodsnum text {
    margin-left: 0;
    display: inline-block;
    border: 1rpx solid #f5f5f5;
    width: 120rpx;
    height: 40rpx;
    line-height: 40rpx;
    text-align: center;
    font-size: 38rpx;
}
.shopgoodlist .cancel{
    position: absolute;
    right: 10rpx;
    top:10rpx;
}

/* 合计 */

.allselected {
    margin-left: 0;
    width: 100%;
    background: #fafafa;
    height: 100rpx;
    display: flex;
    position: fixed;
    align-items: center;
    justify-content: space-between;
    bottom: 0;
}

.allselected view {
    display: flex;
    /* flex: 1; */
    align-items: center;
    font-size: 30rpx;
}

.allselected view .allprices {
    /* flex: 1; */
    margin: 0;
    color: #ec5151;
    margin-right: 10rpx;
}

.allselected view .placeanorder {
    /* width: 80rpx; */
    margin: 0;
    flex: 1;
    background-color: #ec5151;
    text-align: center;
    height: 100rpx;
    line-height: 100rpx;
    color: #ffffff;
}
