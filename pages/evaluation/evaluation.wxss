/* pages/evaluation/evaluation.wxss */
Page{
    display: flex;
    justify-content: center;
    flex-direction: column;
    align-items: center;
}
.text{
    display: flex;
    justify-content: center;
    flex-direction: column;
    align-items: center;
    margin-top: 15rpx;
    width: 100%;
    background-color: #fff;
    padding: 30rpx;
}
.input{
    width: 620rpx;
    height: 250rpx;
    /* padding:0 20rpx; */
    /* border:1rpx solid #000; */
    font-size: 28rpx;
    position: relative;
    margin-bottom: 30rpx;
}

.text-show{
    font-size:22rpx;
    position: absolute;
    bottom: 10rpx;
    right: -10rpx;
    color: rgba(82, 82, 82, 0.8);
}

.footer{
    display: flex;
    width: 620rpx;
    padding:0 20rpx;
    margin-left: -10rpx;
}
.img{
    width: 160rpx;
    height: 160rpx;
    border-radius: 15rpx;
    border: 1rpx solid rgba(82, 82, 82, 0.4);
    color: rgba(82, 82, 82, 0.6);
    margin:10rpx;
}

.img view image{
    width: 47rpx;
    height: 45rpx;
}

.button{
    width: 640rpx;
    color: #fff;
    background-color: #e96935;
    border-radius: 35rpx;
    margin-top: 150rpx;
}
