/* pages/search/search.wxss */

page {
    background-color: #fff;
}

/* 头部搜索框 */

.head {
    width: 100%;
    height: 100rpx;
    background-color: #f3f3f3;
}

.headInput {
    background-color: #fff;
    width: 690rpx;
    height: 70rpx;
    border-radius: 15rpx;
    display: flex;
    align-items: center;
    padding-left: 25rpx;
    box-shadow: 0 8rpx 10rpx #d6d6d6;
}

.headInput image {
    width: 28rpx;
    height: 28rpx;
}

.headInput text {
    width: 550rpx;
    padding: 0rpx 20rpx;
    font-size: 28rpx;
    margin-right: 20rpx;
    color: #6666;
}

/* 主页内容 */

.content {
    position: relative;
    box-sizing: border-box;
}

::-webkit-scrollbar {
    width: 0;
    height: 0;
    color: transparent;
}

.index {
    display: flex;
}

.index-top {
    height: 200px;
}

.index-left {
    background: #f3f3f3;
    width: 170rpx;
}

.index-right {
    /* flex: -3; */
    display: flex;
    justify-content: center;
}

.index-left-text {
    width: 170rpx;
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    font-size: 28rpx;
    background-color: #f3f3f3;
    color: #e95b42;
}

.index-left-text > view .active1 {
    color: #e95b42;
}

.index-left-text view .active {
    display: block;
    width: 8rpx;
    height: 100rpx;
    background: #e95b42;
    position: relative;
    left: 0rpx;
    top: -99rpx;
    border-radius: 10rpx;
}

.index-right-content {
    display: flex;
    flex-wrap: wrap;
    margin-bottom: 20rpx;
}

.index-right-text {
    box-sizing: border-box;
    padding: 40rpx 10rpx;
    /* height: 60px; */
}

.index-right-text-top {
    margin-top: 20rpx;
    width: 100%;
    height: 40rpx;
    background: #fff;
    font-size: 28rpx;
    color: rgb(90, 90, 90);
}

.cotent {
    padding: 20rpx;
}

.cotentTitle {
    font-size: 30rpx;
    font-weight: bold;
}

.cotentCotent {
    font-size: 24rpx;
    color: #a3a3a3;
}

.money {
    color: #cb2d2c;
    font-size: 28rpx;
}

.sentimentSection2 navigator:nth-child(odd) {
    margin-right: 20rpx;
}

.goods {
    width: 260rpx;
    height: 400rpx;
    background-color: #fff;
}

.goods image {
    margin-bottom: 15rpx;
    width: 260rpx;
    height: 260rpx;
}
