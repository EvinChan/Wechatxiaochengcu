/* pages/center/center.wxss */

Page {
    display: flex;
    justify-content: center;
    flex-direction: column;
    align-items: center;
}

/* 头部样式 */

.head {
    width: 100%;
    /* height: 500rpx; */
    margin-bottom: 20rpx;
    background: #fff;
    display: flex;
    align-items: center;
    padding:30rpx 0;
    margin-top: 10rpx; 
}
.head-text{
    padding: 30rpx;
    width: 70%;
    font-size: 38rpx;
}
.head-text view{
    margin: 10rpx 0;
}
.head image{
    width: 110rpx;
    height: 110rpx;
    border: 7rpx solid rgb(138, 138, 138,.7);
    border-radius: 50%;
}


/* banner栏样式 */

.banner {
    width: 750rpx;
    background-color: #fff;
    display: flex;
    justify-content: center;
    /* flex-wrap: wrap; */
    align-items: center;
    box-shadow: 0 5rpx 15rpx #c2c2c2;
    /* border-radius: 10rpx; */
    padding: 20rpx 0;
}

.bannerContent {
    width: 25%;
    flex-direction: column;
    text-align: center;
}

.bannerContent image {
    width: 50rpx;
    height: 50rpx;
}

.bannerContent text {
    margin-top: 10rpx;
    font-size: 28rpx;
}

/* 菜单 */

.menu {
    margin-top: 20rpx;
    width: 750rpx;
    background-color: #fff;
    box-shadow: 0 5rpx 15rpx #c2c2c2;
    /* border-radius: 10rpx; */
    padding: 20rpx 0;
}

.menuTitle {
    padding: 0 20rpx;
    margin-bottom: 25rpx;
}
.menuContent{
    padding-left:50rpx; 
}
.menuNav {
    /* padding: 0 20rpx; */
    display: flex;
    align-items: center;
    justify-content: space-between;
    font-size: 26rpx;
    color: rgba(105, 105, 105, 0.6);
}

.menuNav navigator {
    width: 90%;
}

.menuNavImg {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-bottom: 20rpx;
    margin-bottom: 20rpx;
}

.menuNavImg > view {
    display: flex;
    align-items: center;
}

.menuNavImg image {
    width: 35rpx;
    height: 35rpx;
    margin-right: 10px;
}


.footer{
    color: #9999;
    margin: 30rpx 0;

}
