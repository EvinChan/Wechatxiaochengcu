/* pages/center-logistics/center-logistics.wxss */
Page {
    width: 750rpx;
    overflow-x: hidden;
    /* position: fixed; */
    display: flex;
    justify-content: center;
    flex-direction: column;
    align-items: center;
}

/* 头部 */
.log-head{
    width: 100%;
    background: #fff;
    margin-top: 20rpx;
}
.log-head .user-text{
    padding: 30rpx;
}
.log-head .user-text view{
    width: 400rpx;
    /* padding:0 20rpx; */
    font-size: 28rpx;
}

/* 展示 */
.log-show{
    width: 100%;
    margin-top: 20rpx;
    background: #fff;
}
.log-show .log-show-head{
    width: 90%;
    display: flex;
    font-size: 31rpx;
    justify-content: space-between;
    padding:20rpx 0;
    color: #666;
    border-bottom: 1rpx solid #f3f3f3;
}
.log-show .log-show-goods{
    width: 90%;
    display: flex;
    padding: 20rpx 0;
    align-items: center;
    border-bottom: 1rpx solid #f3f3f3;
}
.log-show .log-show-goods image{
    width: 120rpx;
    height: 120rpx; 
    margin-right: 20rpx;
}
.log-show-goods-text{
    font-size: 30rpx;
    color: #666;
}
.log-show-goods-text view:nth-child(1){
    color: #000;
    font-weight: bold;
    font-size: 32rpx;
    margin-bottom: 10rpx;
}
.log-show-message{
    padding: 20rpx 0;
    margin-bottom: 20rpx;
}
.log-show-message{
    width: 90%;
    display: felx;
    flex-direction: column;
    font-size: 30rpx;
}
.log-show-message view{
    margin: 5rpx 0;
}
.log-show-message .log-show-message-log{
    width: 100%;
    font-size: 30rpx;
    display: flex;
    justify-content: space-between;
}
.log-show-message .log-show-message-log button{
    width:120rpx; 
    height: 40rpx;
    font-size: 26rpx;
    color: rgb(100, 100, 100);
    background: rgb(187, 187, 187,.7);
    border: 1rpx solid rgb(99, 99, 99);
    /* padding: 5rpx; */
    line-height: 40rpx;
    margin: 0;
    padding: 0;
}
/* 底部查询按钮 */
.log-show-message view:last-child{
    width: 100%;
    height: 60rpx;
    position: relative;
}
.log-show-message view:last-child button{
    width: 150rpx;
    height: 60rpx;
    margin: 0;
    padding: 0;
    color: #fff;
    font-size: 28rpx;
    background: #eb5419;
    line-height: 60rpx;
    border: 3rpx solid #b33f12;
    margin-top: 10rpx;
    position: absolute;
    right: 0;
    box-shadow:0rpx 5rpx 10rpx rgb(158, 158, 158);
}