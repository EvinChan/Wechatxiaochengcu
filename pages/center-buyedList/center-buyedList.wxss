/* pages/center-buyedList/center-buyedList.wxss */
page{
    width: 100%;
    height: 100%;
    dsposition: fixed;
    background-color: #f3f3f3;
}
.details-swiper-tab{
    width: 100%;
    /* border-bottom: 2rpx solid #ccc; */
    text-align: center;
    height: 80rpx;
    line-height: 80rpx;
    display: flex;
    flex-flow: row;
    justify-content: space-between;
    margin: 10rpx 0;
    font-size: 26rpx;
    background-color: #fff;
}
.details-swiper-tab-item{
    width: 20%; 
    color:#434343;
    /* padding: 0 30rpx; */
    margin: 0 20rpx;
}
.active{
    color:#eb5419;
    border-bottom: 4rpx solid #eb5419;
}
swiper{
  text-align: center;
}
swiper swiper-item .content{
    background-color: #fff;
    width: 100%;
}
.content{
    margin-bottom: 15rpx;
}
/* 头部 */
.content-head{
    padding: 20rpx 20rpx 15rpx 20px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    font-size: 26rpx;
    border-bottom: 5rpx solid #f3f3f3;
}
.content-head-left{
    display: flex;
    font-size: 25rpx;
    align-items: center;
}
.content-head-left image{
    width: 25rpx;
    height: 25rpx;
    margin-right: 10rpx;
    margin-left:-10rpx; 
}

/* 订单详情 */
.content-detail{
    padding: 30rpx 15rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-bottom: 5rpx solid #f3f3f3;
}
.content-detail-left{
    display: flex;
    align-items: center;
    font-size: 22rpx;
    color: #797979;
}
.content-detail-left image{
    width: 120rpx;
    height: 120rpx;
    margin-right: 26rpx;
}
.content-detail-left-title{
    font-size: 28rpx;
    font-weight: bold;
    color: #000;
    margin-bottom: 15rpx;
}
.content-detail-rigth{
    font-size: 24rpx;
    color: #797979;
    margin-top: -40rpx;
}
.content-detail-rigth-price{
    font-size: 28rpx;
    color: #e96935;
}

/* 底部 */
.content-footer{
    padding: 15rpx 25rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 26rpx;
}
.content-footer-right{
    display: flex;
    
}
.content-footer-right button{
    width: 165rpx;
    height: 50rpx;
    font-size: 24rpx;
    line-height: 50rpx;
}
.content-footer-right button:nth-child(1){
    background-color: #fff;
    margin-right: 30rpx;
    border:1rpx solid #000;
}
.content-footer-right button:nth-child(2){
    background-color: #e96935;
    color: #fff;
}
