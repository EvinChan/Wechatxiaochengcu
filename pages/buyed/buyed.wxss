/* pages/buyed/buyed.wxss */
Page {
    width: 100%;
    overflow-x: hidden;
    /* position: fixed; */
    display: flex;
    justify-content: center;
    flex-direction: column;
    align-items: center;
}

/* 头部样式 */

.head {
    width: 100%;
    /* height: 500rpx; */
    /* margin-bottom: 20rpx; */
    background: #fff;
    padding-bottom:40rpx; 
}

.headBack {
    width: 100%;
    height: 318rpx;
    background-image: url('http://localhost:8080/img/center-center/收获定位.png');
    background-size: 750rpx 318rpx;
}

.head .user {
    margin-top: -155rpx;
    width: 690rpx;
    background-color: rgba(255, 255, 255, 0.6);
    border-radius: 10rpx;
    box-shadow: 0 5rpx 15rpx #c2c2c2;
    position: relative;
}

.head .user .user-text{
    width: 630rpx;
    padding: 30rpx;
}
.head .user .user-text view{
    width: 400rpx;
    /* padding:0 20rpx; */
    font-size: 26rpx;
}

/* 商品 */
.cartallview {
    width: 100%;
    margin-bottom: 20rpx;
    /* margin-top: 15rpx; */
    
}

.storehed {
    display: flex;
    align-items: center;
    height: 80rpx;
    font-size: 30rpx;
    border-top: 1rpx solid #f5f5f5;
    border-bottom: 1rpx solid #f5f5f5;
    background: #fff;
}


/* 单页全局 */

icon {
    margin-left: 20rpx;
}

text {
    margin-left: 20rpx;
}

.shopgoodlist {
    display: flex;
    /* justify-content: flex-start; */
    font-size: 28rpx;
    /* height: 230rpx; */
    padding: 20rpx;
    border-top: 1rpx solid #f5f5f5;
    border-bottom: 1rpx solid #f5f5f5;
    position: relative;
    background-color: #fff;
    align-items: center;

}

.shopgoodlist image {
    margin: 0 20rpx;
    height: 95rpx;
    width: 95rpx;
}

/* .shopgoodlist .goodsdata text {
    display: block;
} */

.shopgoodlist .goodsdata .goodsname {
    height: 70rpx;
    font-size: 30rpx;
    margin-bottom: 10rpx;
}

/* .shopgoodlist .goodsdata .specification {
    font-size: 30rpx;
    color: #b2b2b2;
} */

.shopgoodlist .goodsdata .price {
    font-size: 24rpx;
    color: #f10000;
}
.shopgoodlist .goodsdata .priceAfter {
    font-size: 24rpx;
    color: #747474;
}

.shopgoodlist .goodsdata .goodsnum {
    width: 100rpx;
    height: 30rpx;
    position: absolute;
    right: 10%;
    top: 50%;
    display: flex;

}


.shopgoodlist .goodsdata .goodsnum text {
    margin-left: 0;
    display: inline-block;
    border: 1rpx solid #f5f5f5;
    width: 90rpx;
    height: 53rpx;
    line-height: 53rpx;
    text-align: center;
}
.shopgoodlist .cancel{
    position: absolute;
    right: 10rpx;
    top:10rpx;
}

/* 配送方式 */
.content{
     width: 100%;
     background-color: #fff;
     padding: 20rpx 0;
     margin-bottom: 20rpx;
     
}
.content view{
    /* width: 60%; */
    margin-bottom: 10rpx;
    padding: 0 20rpx; 
}
.content view view{
    display: flex;
    justify-content: space-between;
    font-size: 28rpx;
}
.content view view view:nth-child(2){
    color: rgb(126, 126, 126);
}

/* 应付金额 */
.footer{
    width: 100%;
    background-color: #fff;
    padding: 20rpx 40rpx;
    font-size: 28rpx;
}
.footer-head view{
    width: 95%;
    display: flex;
    justify-content: space-between;
    /* padding: 10rpx 40rpx; */
} 
.footer-footer{
    width: 100%;
    background-color: #fff;
    margin-top: 10rpx;
    font-size: 28rpx;
    margin-bottom: 10rpx;
}
.footer-footer view{
    padding: 20rpx 40rpx;
    display: flex;
    justify-content: space-between;
}

.bottom{
    background-color: #49cc45;
    color: #fff;
    width:100%;
    margin-bottom: 20rpx;
}