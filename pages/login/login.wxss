Page {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    width: 100%;
}
image{
    width: 200rpx;
    height: 200rpx;
    margin: 100rpx 0rpx 60rpx 0;
}
.content{
    width: 90%;
    padding: 60rpx 0;
    border-top: 1rpx solid rgb(158, 158, 158);
}
.content view{
    margin: 20rpx 0;
}
.content button{
    margin: 50rpx;
    width: 620rpx;
    border-radius: 20rpx;
    box-shadow: 5rpx 0rpx 10rpx rgb(163, 163, 163);
}